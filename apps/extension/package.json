{
  "name": "briefcase",
  "version": "1.0.0",
  "description": "Chrome side-panel extension for summarizing web content",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "analyze:bundle": "npm run build && node scripts/measure-bundle.js",
    "analyze:visualize": "npm run build && open dist/bundle-stats.html",
    "build:no-optimization": "tsc && vite build --mode development",
    "check:bundle-size": "node scripts/bundle-size-check.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:extension": "playwright test -c playwright-extension.config.js",
    "test:ai": "playwright test -c playwright-extension.config.js --project=storybook-validation",
    "test:visual": "playwright test -c playwright-extension.config.js tests/storybook/visual-regression.spec.js",
    "test:ai-fixes": "playwright test -c playwright-extension.config.js tests/ai-agent/automated-fixes.spec.js",
    "ui:setup": "chmod +x setup-ui-workflow.sh && ./setup-ui-workflow.sh",
    "ui:dev": "concurrently \"npm run storybook\" \"npm run dev\""
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "openai": "^4.104.0",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@preact/preset-vite": "^2.8.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.258",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4"
  },
  "license": "MIT"
}
