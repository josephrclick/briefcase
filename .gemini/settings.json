{
  "contextFileName": "CLAUDE.md",
  "fileFiltering": {
    "respectGitIgnore": false,
    "enableRecursiveFileSearch": true
  },
  "mcpServers": {
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ]
    },
    "mcp-sequentialthinking-tools": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-sequentialthinking-tools"
      ],
      "env": {
        "MAX_HISTORY_SIZE": "1000"
      }
    },
    "exa": {
      "command": "npx",
      "args": [
        "-y",
        "exa-mcp-server"
      ],
      "env": {
        "EXA_API_KEY": "9c3df74c-3418-4f80-a7b7-e917ef1036d5"
      }
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    }
  },
  "telemetry": {
    "enabled": false
  },
  "usageStatisticsEnabled": false,
  "hideTips": false,
  "hideBanner": false,
  "checkpoint": {
    "enabled": true
  }
}
